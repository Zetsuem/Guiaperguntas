<%-include('partials/header.ejs')%>
<body>
    <%-include('partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h2>Perguntas:<a href="/perguntar" class="btn btn-primary">Perguntar</a></h2>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3> 
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-success">Responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>

</body>

<%-include('partials/footer.ejs')%>