<%-include('partials/navbar.ejs')%>
<body>
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>

    <%-include('partials/header.ejs')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>" validate="">
            <button type="submit" class="btn btn-success">Responder</button>
            <hr>
            <h3>Respostas</h3>
            <hr>
            <% respostas.forEach(resposta => { %>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                    </div>
                </div>
                <br>
            <%}) %>
            
        </form>
    </div>
</body>
<%-include('partials/footer.ejs')%>
